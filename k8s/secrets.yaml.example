apiVersion: v1
kind: Secret
metadata:
  name: progress-bot-secrets
type: Opaque
stringData:
  database-url: "postgres://user:password@postgres-host:5432/database"
  client-id: "your-slack-client-id"
  client-secret: "your-slack-client-secret"
